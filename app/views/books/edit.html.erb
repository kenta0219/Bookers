<div class="container">
	<div class="body-wrap">
	  <div id="st-container" class="st-container">
	    <div class="st-pusher">
	      <div class="st-content">
	        <div class="st-content-inner">      
	          <section class="slice slice-lg sct-color-1">
	                  <div class="row">
	                      <div class="col-md-6 col-md-offset-3">
	                          <div class="form-user style-1 rounded has-shadow-1"> 
	                            <div class="form-header text-left">
										<h1 class="form-header-title">Editing Book</h1>
								<div class="form-body text-left">
										<%= form_for(@book) do |f| %>
											<div class="actions row">
												<label class="book-title">Title</label>
												<br /><%= f.text_field :title, class:"col-xs-12"%>
											</div>
											<div class="actions row">
												<label class="book-opinion">Opinion</label>
												<br /><%= f.text_area :body , class:"col-xs-12"%>
											</div>
											<br>

											<div class="actions row">
												<%= f.button "Update Book", class:"btn btn-primary col-xs-12" %>
											</div>
											
												<br /><%= link_to 'Show',book_path(@book) %>
												|
												<%= link_to 'Back',books_path %>
											
										<% end %>
								</div>
								</div>
							  </div>
						  </div>
					  </div>
			  </section>
		    </div>
		  </div>
		</div>
	  </div>
	</div>
</div>

