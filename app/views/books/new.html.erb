		<% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <div class="container">
              <%= value %>
            </div>
          </div>
        <% end %>

<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/list', books: @books, book: @book, user: current_user %>
		</div>
			
					<div class="container">
						<div class="row">
							<div class="col-lg-9">
								<table class="table table-striped">
									<h2>Books</h2>
									<thead>
										<tr>
											<th></th>
											<th>Title</th>
											<th>Opinion</th>
										</tr>
									</thead>
									<tbody>
												<% @books.each do |book| %>
												<% if current_user.id == book.user_id %>
													<tr>
														<td><%= attachment_image_tag current_user,:profile_image,class: "img-responsive pull-left profile-thumb", fallback:"no_image.jpg",size:'60x60'%></td>
														<td><%= link_to book.title,book_path(book.id)%></td>
														<td><%= book.body %></td>
													</tr>
												<% end %>
												<% end %>
											</tr>
											
									</tbody>
								</table>
							</div>
						</div>
					</div>
	</div>
</div>
