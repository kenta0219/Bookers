<div class="container">
	<div class="row">
				<div class="col-lg-3">
						<%= render 'list', books: @books, book: @book,user: current_user %>
				</div>

					<div class="container">
					  <div class="row">
					 	<div class="col-lg-9">
							<table class="table table-striped">
								<h2>Books</h2>
									<thead>
										<tr>
											<th></th>
											<th>Title</th>
											<th>Opinion</th>
										</tr>
									</thead>

									<tbody>
										<% @books.each do |book| %>
										<tr>
											<td>
												<%= attachment_image_tag current_user,:profile_image,class: "img-responsive pull-left profile-image",fallback:"no_image.jpg",size:'60x60'%>
											</td>
											<td>
												<%= link_to book.title, book_path(book) %>

											</td>
											<td>
												<%= book.body %>
											</td>
										</tr>
								    	<% end %>
									</tbody>
							</table>
					 	</div>
					  </div>
					</div>
	</div>
</div>






