<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      
                          <div class="form-user style-1 rounded has-shadow-1">
                            <div class="form-header text-left">
                                <h2 class="form-header-title">User info</h2>
                            </div>
                            <div class="form-body text-left">
                                <%= form_for(@user) do |f| %>
                                     <div class="form-group has-icon">
                                        <label class="control-name">Name</label>
                                          <%= f.text_field :name %>
                                        <br /><label class="control-image">Image</label>
                                          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像",class: "user_edit_form" %>
                                        <label class="control-introduction">Introduction</label>
                                          <%= f.text_area :introduction %>
                                     </div>
                                     <div class="container row">
                                        <%= f.submit "Update User"%>
                                     </div>
                                <% end %>
                              </div>
                          </div> 
                      
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>