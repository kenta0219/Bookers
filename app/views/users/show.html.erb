<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/list', books: @books, book: @book, user: @user %>
		</div>

			<div class="container">
			 	<div class="col-lg-9">
			 	<table class="table table-striped">
			 		<h2>Books</h2>
			 		<thead>
			 			<tr>
			 				<th></th>
			 				<th>TItle</th>
			 				<th>Opinion</th>
			 			</tr>
			 		</thead>
			 		<tbody>
			 				<% @books.each do |book| %>
			 				<% if current_user.id == book.user_id %>
			 				<tr>
			 					<td><%= attachment_image_tag @book.user,:profile_image,class: "img-responsive pull-left profile-thumb", fallback:"no_image.jpg",size: '60x60'%></td>
				 				<td><%= book.title %></td>
				 				<td><%= book.body %></td>
				 			</tr>
			 				<% end %>
			 				<% end %>
			 			</tr>
			 		</tbody>
			 	</table>
			 	</div>

			 </div>
			</div>
	</div>
</div>
